@* Define the model which will be used by this view. *@
@model IEnumerable<LearningAspDotNetCoreMVC.Models.Post>

@{
    // This variable indicates the shared layout to use for this page.
    Layout = "_Layout";
}

<h1>Explorer's Blog</h1>

<p>
    Below are a few of the latest posts from some of our explorers.
</p>

<div class="blog-posts">
    @foreach (var post in Model)
    {
        @* Insert a partial view using the following syntax. It is an asynchronous
           method so await must be used. Here it is overloaded with a second
           parameter to pass the var 'post' instead of the 'Model'. *@
        @await Html.PartialAsync("_Post", post)
    }
</div>
