@* Define the model which will be used by this view. *@
@model LearningAspDotNetCoreMVC.Models.Post

<article class="blog-post">
    <h1>
        @Html.ActionLink(post.Title, "Post", "Blog",
            new { year = post.Posted.Year, month = post.Posted.Month, key = post.Key }
        )
    </h1>
    <div class="details">
        Posted <span>@post.Posted</span> by <span>@post.Author</span>
    </div>
    <div class="content">
        @post.Body
    </div>
</article>
